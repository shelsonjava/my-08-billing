<DataSource 
	ID="DescriptionsDS" 
	serverType="sql"
	tableName="descriptions" 
	qualifyColumnNames="false">

	<fields>
		<field name="description_id" 		type="integer"	title="description_id"	hidden="true" primaryKey="true" />
		<field name="description" 			type="text" 	title="description"/>
		<field name="description_type_id"	type="integer"	title="description_type_id" />
	</fields>

	<operationBindings>
		<!-- FETCH -->
		<operationBinding operationId="searchDescriptions" operationType="fetch">
			<selectClause>				
      			t.description_id,
      			t.description,
      			t.description_type_id
			</selectClause>
			<tableClause>				
				descriptions t
			</tableClause>
			<whereClause><![CDATA[ 
				#if($criteria.description_type_id) and t.description_type_id like ($criteria.description_type_id)||'%' #end
				]]>
			</whereClause>
			<orderClause>t.description_id</orderClause>
		</operationBinding>		
	</operationBindings>
</DataSource>