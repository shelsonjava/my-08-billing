<DataSource
	ID="LastNameDS"
	serverType="sql"
	tableName="lastnames"
	qualifyColumnNames="false">
	<fields>
		<field name="lastname_id"		type="integer"	title="ID"	hidden="true" primaryKey="true" />
		<field name="lastname"			type="text" 	title="Lastname"/>		
		<field name="loggedUserName"	type="text"		title="Logged UserName" hidden="true" />
	</fields>
	
	<operationBindings>
	
		<serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
	
		<!-- Add LastName -->
		<operationBinding operationType="add" operationId="addLastName" serverMethod="addLastName">
            <serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
        </operationBinding>
        
		<!-- LastName Update -->
		<operationBinding operationType="update" operationId="updateLastName" serverMethod="updateLastName">
            <serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
        </operationBinding>
        
        <!-- LastName Status Update -->
		<operationBinding operationType="remove" operationId="removeLastName" serverMethod="removeLastName">
            <serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
        </operationBinding>
    	<operationBinding operationId="searchFromDB" operationType="fetch">
    		<selectClause>   			
    			t.lastname_id,
    			t.lastname
			</selectClause> 
			<tableClause>lastnames t</tableClause>
			<whereClause><![CDATA[ 
				1 = 1
				#if($criteria.lastname) AND t.lastname like ($criteria.lastname)||'%' #end
				]]>  
			</whereClause> 
    	</operationBinding>	
    	<operationBinding operationId="searchFromDB1" operationType="fetch">
    		<selectClause>   			
    			t.lastname_id,
    			t.lastname
			</selectClause> 
			<tableClause>lastnames t</tableClause>
			<whereClause><![CDATA[ 
				1 = 1
				#if($criteria.lastname) AND t.lastname like ($criteria.lastname)||'%' #end
				]]>  
			</whereClause> 
    	</operationBinding>	
    	<operationBinding operationId="searchLastNamesFromDBCustomForCombos" operationType="fetch">
    		<selectClause>   			
    			t.lastname_id,
    			t.lastname
			</selectClause> 
			<tableClause>lastnames t</tableClause>
			<whereClause><![CDATA[ 
				($defaultWhereClause)
				]]>  
			</whereClause> 
    	</operationBinding>	
    </operationBindings>	
</DataSource>