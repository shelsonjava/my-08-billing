<DataSource
	ID="DepartmentDS"
	serverType="sql"
	tableName="departments"
	qualifyColumnNames="false" dropExtraFields = "false">
	<fields>
		<field name="department_id"			type="integer"	title="department_id"	hidden="true" primaryKey="true" />
		<field name="department_name"	type="text" 	title="department_name"/>			
		<field name="rec_date"					type="datetime"	title="Record Date"/>
		<field name="rec_user"					type="text"		title="Record User"/>		
		<field name="deleted"					type="integer"	title="Deleted" hidden="true"/>
	</fields>

	<serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>

	<operationBindings>
		<!-- Searching Person Types - Cached -->
		<operationBinding operationId="searchDepartments" operationType="fetch" serverMethod="fetchDepartments">
    		<serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
    	</operationBinding>    
    </operationBindings>
</DataSource>