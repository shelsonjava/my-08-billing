    	</operationBinding>
    	<operationBinding operationId="searchAllTransportPlacesForCBAvt" operationType="fetch">
    		<selectClause>   			
    			t.transp_stat_id,
    			t.transp_type_id,
				t.name_descr 				
			</selectClause> 
			<tableClause>view_transp_comp_stat t</tableClause>
