<DataSource
	ID="StaffRelativeDS"
	serverType="sql"
	tableName="staff_relative"
	qualifyColumnNames="false"
	dropExtraFields = "false">
	<fields>
		<field name="staff_relative_id"	type="integer"	title="staff_relative_id"	primaryKey="true" />
		<field name="staff_id"				type="integer"	title="staff_id"/>
		<field name="first_name"			type="text"		title="first_name"/>
		<field name="last_name"				type="text"		title="last_name"/>
		<field name="position"				type="text"		title="position"/>
		<field name="loggedUserName"		type="text"		title="Logged UserName" 	hidden="true" />
	</fields>

	<operationBindings>		

		<operationBinding operationId="getAllStaffRelative" operationType="fetch">
    		<selectClause>   			
    		    t.staff_relative_id
			   ,t.staff_id
			   ,t.first_name
			   ,t.last_name
			   ,t.position
			</selectClause> 
			<tableClause>staff_relative t</tableClause>
			<whereClause><![CDATA[
				1 = 1
				#if($criteria.staff_id) and t.staff_id = $criteria.staff_id #end
				]]>  
			</whereClause> 
			<orderClause>t.last_name</orderClause>
    	</operationBinding>
    </operationBindings>	
</DataSource>