<DataSource
	ID="FirstNameDS"
	serverType="sql"
	tableName="firstnames"
	qualifyColumnNames="false">
	<fields>
		<field name="firstname_id"		type="integer"	title="ID"	hidden="true" primaryKey="true" />
		<field name="firstname"			type="text" 	title="Firstname"/>		
	</fields>
	
	<operationBindings>
		
		<serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
		
		<!-- Add FirstName -->
		<operationBinding operationType="add" operationId="addFirstName" serverMethod="addFirstName">
            <serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
        </operationBinding>
        
		<!-- FirstName Update -->
		<operationBinding operationType="update" operationId="updateFirstName" serverMethod="updateFirstName">
            <serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
        </operationBinding>
        
        <!-- FirstName Status Update -->
		<operationBinding operationType="remove" operationId="removeFirstName" serverMethod="removeFirstName">
            <serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
        </operationBinding>
	
		<operationBinding operationId="searchFromDB" operationType="fetch">
    		<selectClause>   			
    			t.firstname_id,
    			t.firstname
			</selectClause> 
			<tableClause>firstnames t</tableClause>
			<whereClause><![CDATA[ 
				1 = 1
				#if($criteria.firstname) AND t.firstname like ($criteria.firstname)||'%' #end
				]]>  
			</whereClause> 
    	</operationBinding>    	
    	<operationBinding operationId="searchFromDB1" operationType="fetch">
    		<selectClause>   			
    			t.firstname_id,
    			t.firstname
			</selectClause> 
			<tableClause>firstnames t</tableClause>
			<whereClause><![CDATA[ 
				1 = 1
				#if($criteria.firstname) AND t.firstname like ($criteria.firstname)||'%' #end
				]]>  
			</whereClause> 
    	</operationBinding> 	
		<operationBinding operationId="searchFNamesFromDBCustomForCombos" operationType="fetch">
    		<selectClause>   			
    			t.firstname_id,
    			t.firstname
			</selectClause> 
			<tableClause>firstnames t</tableClause>	
			<whereClause>
				($defaultWhereClause) 
			</whereClause>			
    	</operationBinding>
    </operationBindings>	
</DataSource>