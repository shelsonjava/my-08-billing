<DataSource 
	ID="ClosedOpenedDS" 
	serverType="sql"
	tableName="descriptions" 
	qualifyColumnNames="false">

	<fields>
		<field name="id"			 			type="integer"		title="description_id"			hidden="true" primaryKey="true" />
		<field name="name" 						type="text" 		title="description"/>
	</fields>

	<operationBindings>
		<!-- FETCH -->
		
		<operationBinding operationId="searchClosedOpened" operationType="fetch">
			<selectClause>				
      			t.id,
      			t.name
			</selectClause>
			<tableClause>				
				(select 0 as id, map_char_codes_geo('Ria') as name from dual
					union all
					select 1 as id, map_char_codes_geo('dafaruli') as name from dual) t
			</tableClause>
		</operationBinding>		
	</operationBindings>
</DataSource>