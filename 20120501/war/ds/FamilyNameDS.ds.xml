<DataSource
	ID="FamilyNameDS"
	serverType="sql"
	tableName="familyname"
	qualifyColumnNames="false">
	<fields>
		<field name="familyname_id"		type="integer"	title="familyname"	hidden="true" primaryKey="true" />
		<field name="familyname"			type="text" 	title="familyname"/>		
		<field name="loggedUserName"	type="text"		title="Logged UserName" hidden="true" />
	</fields>
	
	<operationBindings>
	
		<serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
	
		<!-- Add LastName -->
		<operationBinding operationType="add" operationId="addLastName" serverMethod="addLastName">
            <serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
        </operationBinding>
        
		<!-- LastName Update -->
		<operationBinding operationType="update" operationId="updateLastName" serverMethod="updateLastName">
            <serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
        </operationBinding>
        
        <!-- LastName Status Update -->
		<operationBinding operationType="remove" operationId="removeLastName" serverMethod="removeLastName">
            <serverObject lookupStyle="new" className="com.info08.billing.callcenterbk.server.impl.dmi.CommonDMI"/>
        </operationBinding>
    	<operationBinding operationId="searchFromDB" operationType="fetch">
    		<selectClause>   			
    			t.familyname_id,
    			t.familyname
			</selectClause> 
			<tableClause>familynames t</tableClause>
			<whereClause><![CDATA[ 
				1 = 1
				#if($criteria.familyname) AND t.familyname like ($criteria.familyname)||'%' #end
				]]>  
			</whereClause> 
    	</operationBinding>	
    	<operationBinding operationId="searchFromDB1" operationType="fetch">
    		<selectClause>   			
    			t.familyname_id,
    			t.familyname
			</selectClause> 
			<tableClause>familynames t</tableClause>
			<whereClause><![CDATA[ 
				1 = 1
				#if($criteria.familyname) AND t.familyname like ($criteria.familyname)||'%' #end
				]]>  
			</whereClause> 
    	</operationBinding>	
    	<operationBinding operationId="searchLastNamesFromDBCustomForCombos" operationType="fetch">
    		<selectClause>   			
    			t.familyname_id,
    			t.familyname
			</selectClause> 
			<tableClause>familynames t</tableClause>
			<whereClause><![CDATA[ 
				($defaultWhereClause)
				]]>  
			</whereClause> 
    	</operationBinding>	
    </operationBindings>	
</DataSource>